local Library = loadstring(game:HttpGet('https://raw.githubusercontent.com/astraln/SentinelUILIB/main/UI.lua', true))()

local window = Library:Window('Be a Fish')

local tab = window:Tab('Main')

tab:Button('Speed Boost', function()
    local player = game.Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()

    -- Noclip function
    local function noclip()
        for _, v in pairs(character:GetDescendants()) do
            if v:IsA("BasePart") and v.CanCollide == true then
                v.CanCollide = false
            end
        end
    end

    -- Initial noclip
    noclip()

    -- Set initial WalkSpeed change if desired
    game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 55

    -- Check for respawn and reapply noclip and WalkSpeed every 0.001 seconds
    game:GetService("RunService").Stepped:Connect(function()
        if player.Character ~= character then
            character = player.Character
            noclip()
            game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 55  -- Reapply speed
        end
        -- Ensure WalkSpeed is set
        if game.Players.LocalPlayer.Character.Humanoid.WalkSpeed ~= 55 then
            game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 55
        end
    end)

    while true do
        wait(0.001)
        if player.Character and player.Character:FindFirstChildOfClass('Humanoid') then
            noclip()
            if game.Players.LocalPlayer.Character.Humanoid.WalkSpeed ~= 55 then
                game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 55
            end
        end
    end
end)

tab:Toggle('Noclip',false, function(t)
   
end)

tab:Label("Label")

tab:Keybind("Keybind", Enum.KeyCode.E, function(t)
   
end)

local dropdown = tab:Dropdown("Dropdown", {"1", "2",'3','4','5','6','7','8'}, function(item)
    print(item)
end)

tab:Button('Refresh', function()
    dropdown:RefreshDropdown({'69'})
end)

-- Original slider as it was the first time
tab:Slider("Original Slider", 16, 1000, 16, function(value)
    -- Original slider functionality here
end)
